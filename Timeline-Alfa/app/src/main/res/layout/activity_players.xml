<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/playerLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <Button
            android:id="@+id/OnePlayer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"


            android:text="1"
            android:textSize="@dimen/abc_text_size_button_material"
            android:gravity="center"/>
        <Button
            android:id="@+id/TwoPlayers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"


            android:text="2"
            android:textSize="@dimen/abc_text_size_button_material"
            android:gravity="center"/>
        <Button
            android:id="@+id/ThreePlayers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"


            android:text="3"
            android:textSize="@dimen/abc_text_size_button_material"
            android:gravity="center"/>
        <Button
            android:id="@+id/FourPlayers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"


            android:text="4"
            android:textSize="@dimen/abc_text_size_button_material"
            android:gravity="center"/>
        <Button
            android:id="@+id/FivePlayers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"


            android:text="5"
            android:textSize="@dimen/abc_text_size_button_material"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/playerLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/currentNumberPlayers"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:gravity="center"/>

        <Button
            android:id="@+id/BackFromPlayer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"


            android:textAllCaps="false"
            android:text="Back to Setup"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:gravity="center"/>

        <Button
            android:id="@+id/ChooseCategory"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:text="Category"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:gravity="center"/>


    </LinearLayout>

</LinearLayout>
